{
  "info": {
    "name": "ABoroOffice API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Helpdesk + CloudStorage API collection"
  },
  "item": [
    {
      "name": "Helpdesk",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"agent@aboro.local\",\"password\":\"Demo123!\"}"
            },
            "url": {
              "raw": "http://127.0.0.1:8000/helpdesk/api/v1/auth/login/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["helpdesk", "api", "v1", "auth", "login", ""]
            }
          }
        },
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://127.0.0.1:8000/helpdesk/api/v1/health/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["helpdesk", "api", "v1", "health", ""]
            }
          }
        },
        {
          "name": "Tickets (List)",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Token {{helpdesk_token}}"},
              {"key": "X-License-Key", "value": "{{helpdesk_license}}"}
            ],
            "url": {
              "raw": "http://127.0.0.1:8000/helpdesk/api/v1/tickets/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["helpdesk", "api", "v1", "tickets", ""]
            }
          }
        }
      ]
    },
    {
      "name": "CloudStorage",
      "item": [
        {
          "name": "Swagger",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://127.0.0.1:8000/cloudstorage/api/docs/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["cloudstorage", "api", "docs", ""]
            }
          }
        },
        {
          "name": "Files (List)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://127.0.0.1:8000/cloudstorage/api/files/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["cloudstorage", "api", "files", ""]
            }
          }
        },
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [{"key": "X-CSRFToken", "value": "{{csrf}}"}],
            "body": {"mode": "formdata", "formdata": [{"key": "file", "type": "file"}]},
            "url": {
              "raw": "http://127.0.0.1:8000/cloudstorage/api/files/upload/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["cloudstorage", "api", "files", "upload", ""]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "helpdesk_token", "value": ""},
    {"key": "helpdesk_license", "value": ""},
    {"key": "csrf", "value": ""}
  ]
}
