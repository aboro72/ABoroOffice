# ==============================================
# ABoroOffice - Environment Configuration
# ==============================================
# Kopiere diese Datei zu .env und passe sie an

# ==================== Database ====================
DB_ENGINE=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=aboro_db
DB_USER=aboro_user
DB_PASSWORD=change_me_in_production

DB_ROOT_PASSWORD=rootpassword

# ==================== Django Settings ====================
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,aboro.localhost
SECRET_KEY=your-super-secret-key-change-this-in-production-32c7e9d8f4b1a5c3e2d9f1b4a7c3e5d8f2b4a6c8e1d3f5b7a9c2e4d6f8a0b1c

# ==================== License Settings ====================
LICENSE_FILE=config/licenses/active_licenses.json
ENABLE_MODULE_CLOUDE=false
ENABLE_MODULE_HELPDESK=false

# ==================== Redis ====================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ==================== Email ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# ==================== Security ====================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==================== Sentry (Optional) ====================
# SENTRY_DSN=https://your-key@sentry.io/project-id
